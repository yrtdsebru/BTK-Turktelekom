@model Product

<form method="post" asp-controller="Product" asp-action="UpdateOneProduct">  <!--formun nereye gidecegini belirtiyoruz!!! olmazsa veriler nereye gidicek?-->
    <div class="form-group">
        <label for="ProductName"><b>Product Name</b></label>
        <input class="form-control" type="text" asp-for="ProductName" id="ProductName" placeholder="Ürün adı?" /> <!--normalde value=@Model.ProductName de eklememiz gerekir -->
    </div>
    <br />
    <div class="form-group">
        <label for="Price"><b>Price</b></label>
        <input class="form-control" type="text" asp-for="Price" id="Price" placeholder="Fiyat" />
    </div>
    <br />
    <div class="form-group">
        <label for="Description"><b>Description</b></label>
        <input class="form-control" type="text" asp-for="Description" id="DescriptionName" placeholder="Açıklama" />
    </div>
    <br />
    <div class="form-group">
        <label for="ImageUrl"><b>URL</b></label>
        <input class="form-control" type="text" asp-for="ImageUrl" id="ImageUrlName" placeholder="Fotograf adresi" />
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Update</button><br />

</form>

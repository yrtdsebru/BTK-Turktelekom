@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (!SignInManager.IsSignedIn(User))  //login olmamissa false geliyo true'ya cekiyor buraya giriyor. login olmussa false lur true'ya döner buraya girer
    {
        <li class="nav-item">
            <a class="nav-link text-dark"
           asp-controller="Authentication"
           asp-action="Register">Register</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark"
           asp-controller="Authentication"
           asp-action="Login">Login</a>
        </li>
    }
    else  //kullanici loginken
    {
        <li class="nav-item">
            <a class="nav-link text-dark">@User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark"
           asp-controller="Authentication"
           asp-action="Logout">Logout</a>
        </li>
    }
</ul>
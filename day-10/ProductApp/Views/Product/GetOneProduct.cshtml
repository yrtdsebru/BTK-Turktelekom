@model Product

<div class="text-center">
    <h1>Id: @Model.Id Name: @Model.ProductName</h1>
    <img class="card-img-top rounded-2" src="@Model.ImageUrl" alt="@Model.ProductName" style="align-self:center; height:200px; width:250px; padding: 10px;"><br />
    <span class="bg-danger text-white badge p-3 m-3">  
     Fiyat: @Model.Price.ToString("c")</span>
    <hr />
    <a class="btn btn-warning" asp-controller="Product" asp-action="GetAllProducts">Product List</a>
</div>


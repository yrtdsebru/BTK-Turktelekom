@model IEnumerable<ApplicationUser>

<h1>Users</h1>
<div class="row">

    <table class="table table-bordered">
        <thead align="center">
            <tr>
                <th scope="col">User Name</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody align="center">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <a class="btn btn-outline-warning col-4" asp-area="Admin" asp-controller="User" asp-action="AddRoleToUser" asp-route-id=@user.UserName>Add Role</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
</div>